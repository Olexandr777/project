digraph {
	A [label="Input Text"]
	B [label="Split Text into Words"]
	C [label="Word <= 3 Characters
Uppercase"]
	D [label="Word > 3 Characters
Remove Vowels"]
	E [label="Transformed Words List"]
	F [label="Join Words into String"]
	G [label="Output Text"]
	A -> B
	B -> C [label="if len(word) <= 3"]
	B -> D [label="if len(word) > 3"]
	C -> E
	D -> E
	E -> F
	F -> G
}
